                     </div>
                 </form>
             </field>
         </record>

        <!-- empaque -->
         <record id="empaque_form_view" model="ir.ui.view">
             <field name="name">bi.empaque.form</field>
             <field name="model">bi.empaque</field>
             <field name="arch" type="xml">
                 <form string="Empaque">
                      <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="empaque" string="Informacion General">
                                <group col="4" colspan="4">
                                    <field name="name" string="Nombre del producto"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                 </form>
             </field>
         </record>

         <!-- registro empaque -->
         <record id="registro_empaque_form_view" model="ir.ui.view">
             <field name="name">bi.registro.empaque.form</field>
             <field name="model">bi.registro.empaque</field>
             <field name="arch" type="xml">
                 <form string="Registro de Empaque">
                      <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="fecha"/>
                                <field name="granja__id" domain="[('tipo_granja_id','=',2)]"/>
                            </group>
                            <group>
                                <field name="empaque_id"/>
                                <field name="entrada"/>
                                <field name="merma_fabricacion"/>
                                <field name="merma_operacion"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                 </form>
             </field>
         </record>

        <!--alimento -->
        <record id="alimento_form_view" model="ir.ui.view">
            <field name="name">bi.alimento.form</field>
            <field name="model">bi.alimento</field>
            <field name="arch" type="xml">
                <form string="Alimentos">
                    <sheet>
                        <div class="oe_title">
                        </div>
                        <notebook colspan="4">
                            <page name="registro_alimento" string="">
                                <group col="4" colspan="4">
                                    <field name="name" string="Nombre"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                </form>
            </field>
        </record>

        <!--tolva -->
        <record id="tolva_form_view" model="ir.ui.view">
            <field name="name">bi.tolva.form</field>
            <field name="model">bi.tolva</field>
            <field name="arch" type="xml">
                <form string="Tolvas">
                    <sheet>
                        <div class="oe_title">
                            <h3>Tolvas</h3>
                        </div>
                        <group> 
                            <field name="granja_id" required="1"/>
                            <field name="caseta_id" domain="[('granja_id','=',granja_id)]" required="1"/>
                            <field name="name"/>
                            <field name="capacidad" required="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                </form>
            </field>
        </record>

         <!-- tipo de evento-->
        <record id="tipo_evento_form_view" model="ir.ui.view">
            <field name="name">bi.alimento.tipo.evento.form</field>
            <field name="model">bi.alimento.tipo.evento</field>
            <field name="arch" type="xml">
                <form string="Tipo de evento">
                    <sheet>
                        <div class="oe_title">
                            <h3>Tipo de Evento</h3>
                        </div>
                        <group>
                            <field name="id"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                </form>
            </field>
        </record>

        <!-- registro alimento -->
        <record id="registro_alimento_form_view" model="ir.ui.view">
            <field name="name">bi.registro.alimento.form</field>
            <field name="model">bi.registro.alimento</field>
              <field name="arch" type="xml">
                <form string="Alimento">
                     <header>
                           <header>
                        <button string="Registrar" type="object" name="transit_progressbar" class="oe_highlight" attrs="{'invisible':[('state','!=', 'draft')]}"/>
                        <button string="Cancelar" type="object" name="cancel_progressbar"
                                attrs="{'invisible':[('state','=','cancel')]}"/>

                        <field name="state" widget="statusbar"/>
                    </header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3><field name="name"/></h3>
                        </div>
                        <hr/>
                        <group>
                            <group>
                                <field name="fecha" required="1"/>
                                <field name="granja_id" required="1"/>
                                <field name="caseta_id" domain="[('granja_id','=',granja_id)]" required="1"/>
                                <field name="parvada_id" readonly="1"/>
                                <field name="capacidad_tolva" readonly="1" style="background-color:grey; color:white;"/>
                            </group>
                            <group>
                                <field name="tipo_evento_id"/>
                                <field name="tolva_id" domain="[('caseta_id','=',caseta_id)]"/>
                                <field name="alimento_id"/>
                                <field name="ticket_entrante" attrs="{'invisible':[('tipo_evento_id','!=', 1)]}"/>
                                <field name="fleje" attrs="{'invisible':[('tipo_evento_id','!=', 1)]}"/>
                                <field name="kgs_entrada" attrs="{'invisible':[('tipo_evento_id','!=', 1)]}"/>
                                <field name="consumo" attrs="{'invisible':[('tipo_evento_id','!=', 2)]}"/>
                            </group>
                        </group>
                        <group>
                                <field name="granja_destino_id" attrs="{'invisible':[('tipo_evento_id','!=', 3)]}"/>
                                <field name="caseta_destino_id" domain="[('granja_id','=',granja_id)]" attrs="{'invisible':[('tipo_evento_id','!=', 3)]}"/>
                                <field name="tolva_destino_id" domain="[('caseta_id','=',caseta_destino_id)]" attrs="{'invisible':[('tipo_evento_id','!=', 3)]}"/>
                                <field name="kgs_traspaso" attrs="{'invisible':[('tipo_evento_id','!=', 3)]}"/>
                                <field name="capacidad_tolva_destino" attrs="{'invisible':[('tipo_evento_id','!=', 3)]}" readonly="1" style="background-color:grey; color:white;"/>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                </form>
            </field>
         </record>

           <!-- sequencia de alimento -->
         <record id="sequence_registro_alimento_id" model="ir.sequence">
            <field name="name">Registro de Alimento</field>
            <field name="code">bi.registro.alimento</field>
            <field name="padding">4</field>
            <field name="prefix">A</field>
            <field name="suffix"></field>
            <field name="implementation">no_gap</field>
         </record>


