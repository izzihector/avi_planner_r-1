          <!-- form view razas-->
         <record id="razaas_form_view" model="ir.ui.view">
            <field name="name">bi.raza.form</field>
            <field name="model">bi.raza</field>
            <field name="arch" type="xml">
                <form string="Razas">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
