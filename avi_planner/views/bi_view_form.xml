            </field>
         </record>


        <!--produccion -->
        <record id="produccion_huevo_form_view" model="ir.ui.view">
            <field name="name">bi.produccion.form</field>
            <field name="model">bi.produccion</field>
            <field name="arch" type="xml">
                <form string="Produccion Diaria">
                    <sheet>
                        <div class="oe_title">
                             <h2>Produccion Diaria</h2>
                             <h3><field name="name"/></h3>
                             <hr/>                           
                        </div>
                        <group>
                            <group>                                
                                <field name="fecha"/>
                                <field name="granja_id" domain="[('tipo_granja_id.name','=','POSTURA'),('es_granja','=',False)]"/>
