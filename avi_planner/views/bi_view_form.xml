        <!-- marca -->
         <record id="marca_form_view" model="ir.ui.view">
             <field name="name">bi.marca.form</field>
             <field name="model">bi.marca</field>
             <field name="arch" type="xml">
                 <form string="Marca">
                      <sheet>
                        <div class="oe_title">
                            <h1>
                                <table>
                                    <tr>
                                    </tr>
                                </table>
                            </h1>
                        </div>
                        <notebook colspan="4">
                            <page name="marca" string="Informacion General">
                                <group col="4" colspan="4">
                                    <field name="name" string="Nombre de la marca"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
